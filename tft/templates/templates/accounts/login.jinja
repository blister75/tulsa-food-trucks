{% extends 'base.jinja' %}

{% block content %}
{% if form.errors %}
<p>Your email and password didn't match. Please try again.</p>
{% endif %}

<form method="post" action="{{ url('accounts_login') }}" data-ajax="false">
{% csrf_token %}
    <div data-role="fieldcontain">
        <label for="{{form.username.name}}">Email:</label>
        {{ form.username }}
    </div>
    <div data-role="fieldcontain">
        <label for="{{form.username.name}}">Password:</label>
        {{ form.password }}
    </div>

    <input type="submit" value="login" />
    <input type="hidden" name="next" value="{{ url('companies') }}" />
</form>

<h2>Don't have an account?</h2>
<p><a href='{{ url('accounts_register') }}' data-ajax="false">Register for an account</a></p>
{% endblock content %}
